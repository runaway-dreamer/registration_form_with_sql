<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/DarkBlue"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:gravity="end"
            android:textColor="@color/White"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your \n    Account"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/White"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint=" Your Name"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint=" Email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint=" Password"
            android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn" />

        <EditText
            android:id="@+id/et_confirm_pass"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint=" Confirm Password"
            android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn" />

        <Button
            android:id="@+id/create_account"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Create Account"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:onClick="gotoNext"
            android:background="@drawable/join_btn"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="I ready have an account"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>



</LinearLayout>